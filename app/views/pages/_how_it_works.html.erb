<div id="how-it-works" class="carousel slide">
  <%
    steps = [
      'Sign in with GitHub and create an agreement for your project.',
      'Add a link to your CONTRIBUTING file.',
      'A new pull request is marked as needing a CLA signature.',
      'The contributor signs in with GitHub and signs your agreement.',
      'The contributor signs in with GitHub and signs your agreement.',
      'Done!  The pull request is automatically marked ready for merge.'
    ]
  %>
  <h2>How does it work?  Just a few easy steps:</h2>
  <div class="carousel-inner">
    <% steps.each_with_index do |step, index| %>
      <div class="item <%= 'active' if index == 0 %>">
        <%= image_tag "how-it-works/#{ index + 1}.png" %>
        <div class="carousel-caption">
          <h4>Step <%= index + 1%></h4>
          <p><%= step %></p>
        </div>
      </div>
    <% end %>
  </div>

  <a class="left carousel-control" href="#how-it-works" data-slide="prev">‹</a>
  <a class="right carousel-control" href="#how-it-works" data-slide="next">›</a>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    //<![CDATA[
      $(function() {
        $('.carousel').carousel({
          interval: 5000
        });
      });
    //]]>
  </script>
<% end %>
